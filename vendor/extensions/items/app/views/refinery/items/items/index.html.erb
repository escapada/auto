<% content_for :body do %>
	<h1>СЕЙЧАС РАЗБИРАЕМ</h1>
	<div class="topmargin">
	<% @items.each do |item| %>
	<div class='<%=cycle("item_prw odd", "item_prw even")%>' >
		<% item.photos.each do |photo| %>
			<%= link_to image_tag(photo.image.url(:medium)), refinery.items_item_path(item) if photo.main %>
		<% end if item.photos.present? %>
		<div class="item_info">
			<%=image_tag(item.model.downcase+'.png', {:height=>48})%>
			<div class="items_txt">
				<%= item.title %><br />
				<%= item.description if item.description.present? %>
			</div>
		</div>
	</div>
	<% end %>
	</div>

<% end %>

<% content_for :side_body do %>
  <%= render 'banners' %>
<% end %>

<%= render '/refinery/content_page' %>
