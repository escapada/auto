			<%= link_to image_tag(photo.image.url(:medium)), refinery.items_item_path(item) if photo.main %>
		<% end %>
		<div class="item_info">
			<%=image_tag(item.model.downcase+'.png')%>
			<div class="items_txt">
				<%= item.title %>
			</div>
		</div>
	</div>
	<% end %>
	</div>


<% end %>

