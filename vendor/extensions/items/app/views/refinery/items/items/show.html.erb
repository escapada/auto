<% content_for :body_content_title do %>
  <%= @item.model %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Model</h1>
    <p>
      <%=raw @item.model %>
    </p>
  </section>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @item.title %>
    </p>
  </section>
  <section>
    <h1>Meta</h1>
    <p>
      <%=raw @item.meta %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @item.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="items">
      <% @items.each do |item| %>
        <li>
          <%= link_to item.model, refinery.items_item_path(item) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
