<ul>
  <% if ::Refinery::Items::Admin::ItemsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.items_admin_items_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_items_admin_item_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Items::Admin::ItemsController.sortable? && ::Refinery::Items::Item.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Items"),
                 refinery.items_admin_items_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Items"),
                 refinery.items_admin_items_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
