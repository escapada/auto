<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(item) -%>">
  <span class='title'>
    <%= item.model %>

  </span>
  <span class='actions'>


    <%= link_to refinery_icon_tag("application_go.png"), refinery.items_item_path(item),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("image_add.png"), refinery.items_admin_imgs_path(item),
        :title => t('.image_add') %>
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_items_admin_item_path(item),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.items_admin_item_path(item),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => item.model),
        :method => :delete %>
  </span>
</li>
