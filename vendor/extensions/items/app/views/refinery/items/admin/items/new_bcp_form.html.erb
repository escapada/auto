<%= form_for [refinery, :items_admin, @item], :html => { :multipart => true } do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @item,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :model -%>
    <%= f.text_field :model, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title -%>
  </div>

  <div class='field'>
    <%= f.label :meta -%>
    <%= f.text_field :meta -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "items/item" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.items.admin.items.item'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @item.model) -%>
<% end -%>

  <div class="form-actions">
    <div id="listimgs"></div>
  </div>
  <div class="form-actions">
    <%#= form_for(ItemPhoto.new) do |builder| -%>
    <%= form_for(@photos, url: refinery.items_admin_add_photo_path, html: { :multipart => true }, remote: true) do |builder| -%>
    <%#= builder.check_box :main, class: 'ifcheked' %>
    <%= builder.file_field :image %>
    <%#= builder.hidden_field :all %>
    <%= builder.submit 'Добавить фото'%>
    
    

<%########################################= check_box_tag "person[admin]", @person.company.admin? %>

    <%# render 'imglist' %>
    <%#= f.fields_for @photos do |builder| -%>
    <%#= builder.check_box :main, class: 'ifcheked' %>
    <%#= builder.file_field :image %>
    <span id="addimg">add</span>

    <% end %>
  </div>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
