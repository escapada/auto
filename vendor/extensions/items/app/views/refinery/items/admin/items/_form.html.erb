<%# photo_arr = @item.itemphoto.all %>
<%= form_for [refinery, :items_admin, @item] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @item,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :model -%>
    <%= f.text_field :model, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title -%>
  </div>

  <div class='field'>
    <%= f.label :meta -%>
    <%= f.text_field :meta -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "items/item" -%>
  </div>

  <div class="form-actions">
    <% form_for @item_photo do |f| %>
      <%= f.file_field :image %>
    <% end %>
    <span class="addimg">add</span>
    <div class="listimgs">
      <% @item_photos.each do |photo|%>
      <div class="itemthumb">
        <%= image_tag(photo.image.thumb('180x180#').url, alt: photo.title, class: 'img-thumbnail')%>
      </div>
      <%end%>
    </div>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.items.admin.items.item'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @item.model) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
