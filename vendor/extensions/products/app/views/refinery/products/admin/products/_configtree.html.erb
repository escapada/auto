<div id="tree">
  <% @categories.each do |type| %>
    <div class="tree_type">
      <div class="tree_typename_wrap">
        <div class="tree_plus">
          <span>+</span>
        </div>
        <div class="tree_typename">
          <%= type.title %>
        </div>
      </div>
      <div class="tree_subtype">
        <ul>
          <li><%= text_field_tag 'manage_type', "", :size => 25 -%><%= refinery_icon_tag("add.png", :id => "subplus") %></li>
          <% type.carmodelsubtypes.each do |subtype| %>
            <li class="subtype_li"><input id="<%= subtype.id %>" class="subtype_update" value="<%= subtype.title %>" size="25" />
              <%= link_to refinery_icon_tag("tick.png"), refinery.products_admin_subupdate_path(:id => subtype.id), :remote => true, :method => "post" %>
              <%= link_to refinery_icon_tag("delete.png"), refinery.products_admin_subdelete_path(subtype),
                :class => "subtype_delete",
                :method => :delete %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>




