<%= form_for [refinery, :products_admin, @product] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @product,
              :include_object_name => true %>

  <div class='field'>
    <strong>Добавить модель</strong><br />
    <%#= select_tag(@cars) %>
    <%= text_field_tag 'modeltype' -%>
    <div class="tmplistitems">
    </div>
  </div>

  <div id="listitems">
    <%# model_ids = [] %>
    <% @product.carmodels.any? do |model|%>
      <#%model_ids << model.id %>
      <div class="carmodelitem" data-carmodelid="<%= model.id %>">
        <%= model.title %>
        <span class="delete_item" onclick="delete_tmp_item("model", <%= model.id %>)">-</span>
      </div>
    <% end %>
  </div>

  <div class='field'>
    <strong>Деталь</strong><br />
    <%#= select_tag(@cars) %>
    <%= text_field_tag 'subtype' -%>
    <div class="tmplistitems">
    </div>
  </div>
  

    <%#= f.hidden_field :car_ids -%>
    <%#= f.hidden_field :carmodel_ids -%>
    <%= f.hidden_field(:carmodel_ids) -%>

<!-- ///////////////////////// -->
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :carmodelsubtype_id -%>
    <%= f.number_field :carmodelsubtype_id -%>
  </div>

  <div class='field'>
    <%= f.label :condition -%>
    <%= f.text_field :condition -%>
  </div>

  <div class='field'>
    <%= f.label :status -%>
    <%= f.text_field :status -%>
  </div>

  <div class='field'>
    <%= f.label :price -%>
    <%= f.text_field :price -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.products.admin.products.product'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @product.title) -%>
<% end -%>
