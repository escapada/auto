<%= form_for [refinery, :products_admin, @product] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @product,
              :include_object_name => true %>

  <div class='field'>
    Добавить модель<br />
    <%#= select_tag(@cars) %>
    <%= text_field_tag 'modeltype' -%>
    <%= f.hidden_field :carmodel_ids -%>
    <%= f.hidden_field :car_ids -%>
  </div>


<!-- ///////////////////////// -->
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :carmodelsubtype_id -%>
    <%= f.number_field :carmodelsubtype_id -%>
  </div>

  <div class='field'>
    <%= f.label :condition -%>
    <%= f.text_field :condition -%>
  </div>

  <div class='field'>
    <%= f.label :status -%>
    <%= f.text_field :status -%>
  </div>

  <div class='field'>
    <%= f.label :price -%>
    <%= f.text_field :price -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.products.admin.products.product'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @product.title) -%>
<% end -%>
